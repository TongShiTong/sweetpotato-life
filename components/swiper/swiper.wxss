
.swiper-block {
  height: 200rpx;
}

.swiper-item .image-box {
  width: 718rpx;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 auto;
  box-shadow: 0px 0px 16rpx 0px rgba(38,38,38,0.1);
  position: relative;
}
.swiper-item .image-box image {
  width: 100%;
  height: 100%;
}

.slide-image{
  height: 100%;
  width: 100%;
  border-radius: 16rpx;
  z-index: 1;
}
.active{
  transform: scale(1.3);
  transition: all .5s ease-in 0s;
  z-index: 20;
  opacity: 1;
}
.common{
  transform: scale(1);
  transition: all .5s ease-in 0s;
  z-index: 0;
  opacity: 0.4;
}

.dots-box{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  z-index: 1;
  bottom: 20rpx;
  right: 36rpx;
}

.dots{
  width: 10rpx;
  height: 10rpx;
  border-radius: 6rpx;
  margin: 0 4rpx;
  background-color: #8C8C8C;
}
.bg-333{
  width: 22rpx;
  background-color: #FF5704;
}