.title-box {
  height: 86rpx;
  padding: 22rpx 22rpx 14rpx 20rpx;
  margin: 0 16rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #262626;
  font-weight: 500;
}
.title-img {
  height: 50rpx;
}
.title-img image {
  height: 100%;
}
.hf-image {
  width: 678rpx;
  height: 114rpx;
  margin: 0 auto 16rpx;
}
.hf-image image {
  width: 100%;
  height: 100%;
}
.good-box {
  margin: 0 36rpx;
  padding-bottom: 32rpx;
  display: flex;
  /* justify-content: space-between; */
  overflow: hidden;
}
.itemgood {
  width: 25%;
  flex-shrink: 0;
}
.good-img-box {
  width: 158rpx;
  height: 158rpx;
  border-radius: 12rpx;
  margin: 0 auto 14rpx;
  position: relative;
  overflow: hidden;
}
.good-img-box .good-img {
  width: 100%;
  height: 100%;
}
.good-img-box .good-quy {
  max-width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 4rpx 10rpx 2rpx;
  border-top-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
  background: rgb(76, 76, 76);
  font-size: 20rpx;
  color: #FFE400;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
}
.price-box {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-weight: 800;
  color: #FF5704;
}
.price-box image {
  width: 20rpx;
  height: 34rpx;
  margin: 0 4rpx;
}