/* pages/login/index.wxss */
.login_box {
  width: 550rpx;
  height: 280rpx;
  margin: 142rpx auto 146rpx;
}
.login_box image {
  width: 100%;
  height: 100%;
}

.login_btn {
  padding: 0;
  width: 688rpx !important;
  height: 92rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF5704 100%);
  border-radius: 46rpx;
  line-height: 92rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #fff;
}
.agreement {
  width: 750rpx;
  position: fixed;
  bottom: 92rpx;
  font-size: 28rpx;
  color: #222222;
  font-weight: 400;
  text-align: center;
}
.agreement text {
  color: #FF5704;
}