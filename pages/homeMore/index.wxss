/* pages/homeMore/index.wxss */
/* 热卖精选 */
.rmjx-box {
  margin: 0 16rpx;
}
.rmjx-title {
  width: 224rpx;
  height: 36rpx;
  margin: 28rpx auto 20rpx;
}
.rmjx-title image {
  width: 100%;
  height: 100%;
}
.rmjx-good-info {
  padding: 30rpx 20rpx 40rpx;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 0px rgba(38,38,38,0.1);
  border-radius: 24rpx;

}
.good-info-box {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.good-img-box {
  width: 192rpx;
  height: 184rpx;
  background: #D8D8D8;
  border-radius: 20rpx;
}
.good-img-box image {
  width: 100%;
  height: 100%;
}
.good-info-boxs {
  width: 470rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #262626;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  text-align: justify;
}
.good-title image {
  width: 104rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.ycd-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  font-weight: 500;
  color: #8C8C8C;
}

.ycd-box .cd-logo {
  width: 28rpx;
  height: 28rpx;
  /* margin-left: 64rpx; */
  margin-right: 4rpx;
  vertical-align: middle;
}
.tips-box {
  display: flex;
  align-items: center;
  background: rgba(255, 246, 171, 0.2);
  border-radius: 16rpx;
}
.tips-zs {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #FF5704;
}
.tips-disc {
  padding: 2rpx 22rpx 2rpx 8rpx;
  font-size: 20rpx;
  color: #595959;
  font-weight: 400;
}
.specs-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.specs-title {
  font-size: 24rpx;
  color: #262626;
  font-weight: 400;
  padding: 2rpx 20rpx 0;
  background: #F5F5F5;
  border-radius: 6rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.surplus-box {
  display: flex;
  align-items: center;
  font-size: 18rpx;
  color: #262626;
}
.jq-desc {
  font-size: 20rpx;
  color: #FF5704;
  font-weight: bold;
  margin-right: 16rpx;
}
.jiaqian {
  font-size: 24rpx;
}
.progress-box {
  width: 138rpx;
  height: 6rpx;
  background: #BFBFBF;
  border-radius: 17rpx;
  position: relative;
}
.progress {
  width: 50%;
  height: 100%;
  background: #FF5704;
  border-radius: 17rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.detail-info {
  display: flex;
  align-items: center;
  margin-top: 26rpx;
  position: relative;
  height: 64rpx;
}
.xs-wh {
  width: 28rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.xs-wh image {
  width: 100%;
  height: 100%;
}
.benefit {
  background: rgba(255, 246, 171, 0.3);
  border-radius: 6rpx;
  padding-right: 6rpx;
  font-size: 22rpx;
  color: #FF1604;
  font-weight: bold;
  margin-right: 12rpx;
}
.benefit-desc {
  color: #FFFFFF;
  font-weight: 500;
  background: #FF5704;
  border-radius: 6rpx;
  padding: 0 6rpx;
  margin-right: 4rpx;
}
.benefit-desc1 {
  color: #FF5704;
  font-weight: 500;
  border: 1px solid #FF5704;
  border-radius: 6rpx;
  padding: 0 6rpx;
  margin-right: 4rpx;
}
.buy-btn {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  padding: 14rpx 40rpx 12rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF5704 100%);
  border-radius: 40rpx;
  /* margin-left: 12rpx; */
  position: absolute;
  top: 0;
  right: 0;
}