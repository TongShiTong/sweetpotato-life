} */
.btns_box {
  position: absolute;
  width: 702rpx;
  bottom: 40rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.qixiao {
  width: 260rpx;
  height: 84rpx;
  border-radius: 44rpx;
  border: 2rpx solid #262626;
  font-size: 34rpx;
  color: #262626;
  font-weight: 600;
  text-align: center;
  line-height: 84rpx;
}
.queren {
  width: 260rpx;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  font-weight: 600;
  text-align: center;
  line-height: 88rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF5704 100%);
}
.pop-title {
  font-size: 34rpx;
  text-align: center;
  font-weight: 600;
  color: #262626;
  padding: 32rpx 0 40rpx;
}
.input-box {
  font-size: 28rpx;
  color: #262626;
  font-weight: 400;
  text-align: center;
}
