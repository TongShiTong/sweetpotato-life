/* pages/recruit/index.wxss */
page {
  background-color: #f5f5f5;
}
.recruit_info {
  font-size: 40rpx;
  color: #262626;
  font-weight: 600;
  text-align: center;
  /* margin-top: 104rpx; */
}
.btns_box {
  width: 100%;
  height: 188rpx;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  padding: 12rpx 40rpx 0;
  box-sizing: border-box;
  z-index: 1;
}
.btns_box1 {
  width: 100%;
  height: 228rpx;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  font-size: 20rpx;
  color: #8C8C8C;
  font-weight: 400;
  text-align: center;
}
.btns_box1 .weiks {
  font-size: 38rpx;
  color: #262626;
  font-weight: 600;
  padding-top: 24rpx;
}

.bm_btn {
  width: 320rpx;
  height: 96rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF4D04 100%);
  box-shadow: 0px 4rpx 16rpx 0px rgba(255,87,4,0.5);
  border-radius: 46rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.jr_btn {
  width: 320rpx;
  height: 96rpx;
  padding: 14rpx 0;
  background: linear-gradient(270deg, #FFCE00 0%, #FFA30B 100%);
  box-shadow: 0px 4rpx 16rpx 0px rgba(255,164,11,0.5);
  border-radius: 46rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  box-sizing: border-box;
}
.jr_btn .dsc {
  font-size: 18rpx;
  font-weight: 400;
  color: #FFFFFF;
}
