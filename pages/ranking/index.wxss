/* pages/ranking/index.wxss */
page {
  background-color: #FAFAFA;
}

.recruit_info {
  width: 100%;
  height: 810rpx;
  /* background: #BFBFBF; */
  position: relative;
}
.recruit_info .shoutu {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.recruit_info .wenhao {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  position: absolute;
  top: 42rpx;
  right: 38rpx;
  z-index: 1;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height: 44rpx;
}
.flow {
  width: 654rpx;
  height: 198rpx;
  margin: 0 auto;
  display: flex;
  padding: 32rpx 24rpx 32rpx 18rpx;
  justify-content: space-between;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 0px rgba(0,0,0,0.1);
  border-radius: 28rpx;
  position: relative;
  top: -100rpx
}
.pross-box {
  width: 156rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pross-box1 image {
  width: 72rpx;
  height: 72rpx;
}
.pross-box image {
  width: 72rpx;
  height: 72rpx;
  flex-shrink: 0;
}
.pross-box view {
  font-size: 24rpx;
  font-weight: 500;
  color: #595959;
  text-align: center;
}

.bit-box {
  margin: 0 26rpx 0 22rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 0px rgba(0,0,0,0.1);
  border-radius: 28rpx;
  position: relative;
  top: -80rpx;
  padding-bottom: 20rpx;
}
.bit-title-box {
  height: 100rpx;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}
.bit-title-box image {
  width: 44rpx;
  height: 44rpx;
}

.info-item {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
}
.info-box {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #595959;
}
.info-item .info-box .paihang {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}
.make-money {
  font-weight: 600;
  font-size: 32rpx;
  color: #FF5704;
}
.make-money text {
  font-size: 24rpx;
}
.wushuju {
  height: 360rpx;
  display: flex;
  justify-content: center;
  align-items: center;  
  color: #8c8c8c;
  font-size: 32rpx;
}
.btns_box {
  width: 100%;
  height: 188rpx;
  position: fixed;
  bottom: 0;
  z-index: 10;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  padding: 12rpx 40rpx 0;
  box-sizing: border-box;
}
.btns_box1 {
  width: 100%;
  height: 228rpx;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  font-size: 20rpx;
  color: #8C8C8C;
  font-weight: 400;
  text-align: center;
}
.btns_box1 .weiks {
  font-size: 38rpx;
  color: #262626;
  font-weight: 600;
  padding-top: 24rpx;
}

.bm_btn {
  width: 320rpx;
  height: 96rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF4D04 100%);
  box-shadow: 0px 4rpx 16rpx 0px rgba(255,87,4,0.5);
  border-radius: 46rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
}
.jr_btn {
  width: 320rpx;
  height: 96rpx;
  background: linear-gradient(270deg, #FFCE00 0%, #FFA30B 100%);
  box-shadow: 0px 4rpx 16rpx 0px rgba(255,164,11,0.5);
  border-radius: 46rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
}

