/* pages/status/index.wxss */
.chahu {
  width: 654rpx;
  height: 572rpx;
  margin: 80rpx auto 64rpx;
}
.chahu image {
  width: 100%;
  height: 100%;
}
.tips {
  text-align: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #262626;
}
.tips_succ {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.again_btn {
  width: 326rpx;
  height: 88rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF5704 100%);
  box-shadow: 0px 4rpx 16rpx 0px rgba(255,87,4,0.5);
  border-radius: 46rpx;
  margin: 100rpx auto;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
  line-height: 88rpx;
}
.pupoe {
  position: fixed;
  top: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
}
.img_box {
  width: 634rpx;
  height: 700rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.img_box image {
  width: 100%;
  height: 100%;
}
.btns_box {
  position: absolute;
  width: 634rpx;
  bottom: 32rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.qixiao {
  width: 260rpx;
  height: 84rpx;
  border-radius: 44rpx;
  border: 2rpx solid #262626;
  font-size: 34rpx;
  color: #262626;
  font-weight: 600;
  text-align: center;
  line-height: 84rpx;
}
.queren {
  width: 260rpx;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  font-weight: 600;
  text-align: center;
  line-height: 88rpx;
  background: linear-gradient(270deg, #FF8700 0%, #FF5704 100%);
}